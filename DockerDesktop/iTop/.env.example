# Configuration de la base de données MySQL
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# Configuration iTop
ITOP_DB_HOST=mysql
ITOP_DB_NAME=itop
ITOP_DB_USER=itop
ITOP_DB_PASSWORD=your_secure_itop_password_here

# Ports (optionnel - valeurs par défaut)
MYSQL_PORT=3306
ITOP_PORT=8080
PHPMYADMIN_PORT=8081

# Ressources MySQL
MYSQL_CPU_LIMIT=1.0
MYSQL_MEMORY_LIMIT=1G
MYSQL_CPU_RESERVATION=0.5
MYSQL_MEMORY_RESERVATION=512M

# Ressources iTop
ITOP_CPU_LIMIT=2.0
ITOP_MEMORY_LIMIT=2G
ITOP_CPU_RESERVATION=1.0
ITOP_MEMORY_RESERVATION=1G

# Ressources PhpMyAdmin
PHPMYADMIN_CPU_LIMIT=0.5
PHPMYADMIN_MEMORY_LIMIT=512M
PHPMYADMIN_CPU_RESERVATION=0.25
PHPMYADMIN_MEMORY_RESERVATION=256M